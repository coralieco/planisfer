
<% # bandeau du haut %>

<div class="flight-ticket-title text-center">
    <div class="banner-content">
    <%= link_to root_path do %>
    <%= image_tag "logo.png", class:"logo-1"%>
    <% end %>
  </div>
  <h1 class="">Select a car</h1>
  <%= link_to "> Back to all flights", search_path(@search), class: "back" %>
</div>

<% # Fin du bandeau du haut %>
<% # début du wrapper %>
<div class = "card-wrapper">
  <% # début du container %>
  <div class="container">
    <div class="row">
      <% # Début case bootstrap formulaire et cards %>
      <div class="col-xs-12 col-sm-8">
        <% #Début de la row de formulaire %>
        <div class = "row">
          <div class = col-xs-12>
            <div class = "car-form">
              <%# Beginning 1st row form %>
              <div class = "row">
                <div class = "col-md-1">
                  <span class = "light-data">From</span>
                  <%#mettre les icones de trainline %>
                </div>
                <div class = "col-md-4">
                  <%= text_field_tag :starts_on, Constants::CITY_REGION[@trip.round_trip_flight.flight1_destination_airport_iata], placeholder: "Pick-up-location", "class" => 'input-lg form-control car-form-text'%>
                </div>
                <div class = "col-md-4">
                  <%= text_field_tag :starts_on, @trip.starts_on.strftime("%B %e"), placeholder: "Pick-up-date", "class" => 'input-lg form-control car-datepicker car-form-text'%>
                </div>
                <div class = "col-md-3">
                  <%= select_tag :pick_up_time, options_for_select(@trip.round_trip_flight.flight1_landing_at.localtime.strftime("%H:%M")), class: "input-lg form-control car-form-text", prompt: "Pick-up time" %>
                </div>
              </div>
              <%# End 1st row form %>
              <%# Beginning 2nd row form %>
              <div class = "row">
                <div class = "col-md-1">
                  <span class = "light-data">To</span>
                  <%#mettre les icones de trainline %>
                </div>
                <div class = "col-md-4">
                  <%= text_field_tag :starts_on, Constants::CITY_REGION[@trip.round_trip_flight.flight2_origin_airport_iata], placeholder: "Pick-up-location", "class" => 'input-lg form-control car-form-text'%>

                </div>
                <div class = "col-md-4">
                  <%= text_field_tag :starts_on, @trip.returns_on.strftime("%B %e"), placeholder: "Pick-up-date", "class" => 'input-lg form-control car-datepicker car-form-text'%>

                </div>
                <div class = "col-md-3">
                  <%= select_tag :pick_up_time, options_for_select(@trip.round_trip_flight.flight2_take_off_at.localtime.strftime("%H:%M")), class: "input-lg form-control car-form-text", prompt: "Pick-up time" %>

                </div>
              </div>
              <%# End 2nd row form %>
              <%# Beginning 3rd row form %>
              <div class = "row">
                <div class = "col-xs-12">
                <span class= "light-data driver"> Driver is > 25 years old </span> <span> <%= check_box_tag :age, 1, {:checked => "checked"}  %> </span>
            </div>
              </div>
              <%# End 3rd row form %>
            </div>
          </div>
        </div>
        <% #Fin de la row de formulaire %>
        <% #Début row titre cards %>
        <div id="TitleShow">
          <h3>THE BEST CARS PER CATEGORY </h3>
        </div>
        <% #Fin row titre cards %>
        <% #Début de la 1ere row de cards%>
        <div class="row">
          <% # Début de la première card %>
