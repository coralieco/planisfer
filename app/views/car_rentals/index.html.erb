                      <span class="seat">ARRIVAL<br><span><%= @trip.round_trip_flight.flight1_landing_at.localtime.strftime("%H:%M") %></span></span>
                      <span class="name"><br><span><%= @trip.starts_on.strftime("%B %d") %></span></span>
                      <span class="boardingtime">FROM<br><span><%=Constants::AIRPORTS[@search.city] %> </span></span>
