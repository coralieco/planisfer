<div class="recap-of search">
  <p>City you want to escape: <%= @city %> Region you want to visit: <%= @region%></p>
  <p>Departure on: <%=  @starts_on%> Return on:<%= @returns_on%></p>
</div>

<div class="container-fluid">

<!-- part with tab and the result -->
  <div class="col-xs-12 col-sm-6">

<!-- part with tab showing best results by airports -->
    <div class="tabContainer">

      <div class="row ">
        <div class="flexbox">
          <div>
            <%=  link_to "All flights", trips_path(params.to_hash.slice("city", "region", "starts_on", "returns_on", "nb_travelers")) %>l
          </div>
          <% @region_airports.each do |airport| %>
            <div><%= airport %></div>
          <% end %>
        </div>
      </div>



    The 4 cheapest results:

    <div class="row">
      <% @trips_selection.each do |trip| %>
        <div class="col-xs-12 col-sm-12">
          <%= link_to trips_path(trip) do %>
            <div class="cardContainer flexbox">
              <div class="card-description">

              </div>
              <div class="card-price ">
                <h2> <%= trip.price %> â‚¬</h2>
              </div> <!-- fin card-price -->
            </div> <!-- fin cardContainer -->
          <% end %>
        </div> <!-- fin de col -->
      <% end %>
    </div>  <!-- fin du row -->

  </div>
     <div class="col-sm-5">
        <div>
          <div id="map" style="width: 100%; height: 400px;"></div>
        </div>
      </div>

</div>



<% content_for(:after_js) do %>
  <%= javascript_tag do %>
    $(document).ready(function() {
      var handler = Gmaps.build('Google');
      handler.buildMap({
        provider: {
          scrollwheel: false,
          zoomControl: false
        },
        internal: { id: 'map' } }, function() {
        markers = handler.addMarkers(<%= raw @hash.to_json %>);
        handler.bounds.extendWith(markers);
        handler.fitMapToBounds();
        if (markers.length == 0) {
          handler.getMap().setZoom(2);
        } else if (markers.length == 1) {
          handler.getMap().setZoom(14);
        }
      });
    });

  <% end %>
<% end %>

