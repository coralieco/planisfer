 <!-- bandeau du haut  -->

<div class="flight-ticket-title text-center">
    <div class="banner-content">
    <%= link_to root_path do %>
    <%= image_tag "logo.png", class:"logo-1"%>
    <% end %>
  </div>
  <h1 class=""> <%= @trip.region.name %>, Here we come ! </h1>
  <%= link_to "Change flights", search_path(@search), class: "back" %>

<!--   Terminer lien quand on peut récuperer l'id de car_rental -->
  <%= link_to "Change car", search_path(@search),  class: "back" %>

<!-- CODE FOR BOOK BUTTON -->
  <div class = "row">   <!-- Beg of row 9 -->
    <div class = "col-sm-12">
      <div class = text-center>
        <%= render 'shared/book_modal', modal_name: "book_modal" %>

        <button class="btn-brand final-book" data-toggle="modal" data-target="#book_modal">BOOK</button>
      </div>
    </div> <!-- End of booking button bootstrap col -->
  </div> <!-- End of row 9 -->
</div> <!-- end of flight-ticket-title -->

<div class="row">
  <div class="col-xs-12 col-md-6">
    <%= image_tag Constants::DESTINATIONS[@trip.region.name]["image_1"], :width => 640, :height => 480 %>
   </div> <!-- end of col-xs-12 -->

   <div class="col-xs-12 col-md-6">

    <p>Awesome, here are your flight details for this new adventure </p>
    <br>
    <div class="flight-card">
      <div class="card-description">
        <div class="card-description-item">
        <!-- card description par colonne : aéroports de départs -->
          <p>
            <span class="flight-number"><%= @trip.round_trip_flight.f1_number %></span>
            <span class="hours"><%= @trip.round_trip_flight.flight1_take_off_at.localtime.strftime("%H:%M") %></span>
            <span class="airport">
              <%=Constants::AIRPORTS[@search.city] %> <span class="light-data"> <%= @trip.round_trip_flight.flight1_origin_airport_iata %></span>
            </span>
          </p>
          <p>
            <span class="flight-number"><%= @trip.round_trip_flight.f2_number %></span>
            <span class="info-label-back"><span class="hours"><%= @trip.round_trip_flight.flight2_take_off_at.localtime.strftime("%H:%M") %></span> <span class="airport"> <%= Constants::CITY_REGION[@trip.round_trip_flight.flight2_origin_airport_iata] %><span class="light-data"> <%= @trip.round_trip_flight.flight2_origin_airport_iata %> </span> </span> </span>
          </p>
        </div>

        <div class="card-description-item">
        <!-- card description par colonne : aéroports d'arrivée -->
          <p>
            <i class="fa fa-long-arrow-right" aria-hidden="true"></i>
            <span class="info-label-go"> <span class="hours"> <%= @trip.round_trip_flight.flight1_landing_at.localtime.strftime("%H:%M") %> </span> <span class="airport"><%= Constants::CITY_REGION[@trip.round_trip_flight.flight1_destination_airport_iata]  %> <span class="light-data"><%= @trip.round_trip_flight.flight1_destination_airport_iata %></span> </span> </span>
          </p>
          <p>
            <i class="fa fa-long-arrow-right" aria-hidden="true"></i>
            <span class="hours"><%= @trip.round_trip_flight.flight2_landing_at.localtime.strftime("%H:%M") %> </span> <span class="airport"> <%=Constants::AIRPORTS[@search.city] %> <span class="light-data"> <%= @trip.round_trip_flight.flight2_destination_airport_iata %> </span> </span>
          </p>
        </div>

        <div class="card-description-item">
          <p>
            <span class="light-data"> <span class="flight-label"> <%= Constants::AIRLINES[@trip.round_trip_flight.carrier1]  %> </span> </span>
          </p>
          <p>
            <span class="light-data"> <span class="flight-label"> <%= Constants::AIRLINES[@trip.round_trip_flight.carrier2]  %> </span> </span>
          </p>
        </div>
      </div> <!-- fin de card-description -->

      <div class="price-action">
        <div class="card-price ">
          <p><%= @trip.price.round %> €</p>
        </div> <!-- fin card-price -->
      </div><!-- fin price-action -->
    </div> <!-- end of flight-card -->

    <hr>

    <p>Your travel buddy <%=  %> waits for you at <%=  %> on <%=  %></p>
    <br>


   </div> <!-- end of col-xs-12 -->
</div> <!-- end of row -->



