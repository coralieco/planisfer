<div class="banner" style="background-image: linear-gradient(-225deg, rgba(0,101,168,0.3) 0%, rgba(0,36,61,0.4) 50%), url('');">
  <div class="banner-content">

   <h1>World is in your hands, now use it !</h1>
   <p>The new way to plan your next roadtrip</p>



    <div class="form-inline text-center">
      <%=form_tag searches_path, :controller => 'searches', method: :post, id: "new_result" do %>
        <%= select_tag :city, options_for_select(Constants::AIRPORTS.invert.sort), class: "form-control input-lg", prompt: "From", style: "border:none" %>
        <%= select_tag  :region, options_for_select(Constants::REGIONS.sort), class: "form-control input-lg", prompt: "To", style: "border:none" %>
