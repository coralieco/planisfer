<div class="banner" style="background-image: linear-gradient(-225deg, rgba(0,101,168,0.4) 0%, rgba(0,36,61,0.5) 50%), url('<%= image_path('background.jpg') %>');">
  <div class="banner-content">
  <%= link_to root_path do %>
     <%= image_tag "logo.png", class:"logo"%>
  <% end %>
  <div class="banner-title">
   <h1>Roadtrips in Europe</h1>
   <h3>Find the best way to discover new regions</h3>
  </div>

   <div class="form-post text-center">
    <h1>Search flights</h1>
    <%=form_tag searches_path, :controller => 'searches', method: :post, id: "new_result" do %>
    <div class="row">
      <div class="col-xs-6">
        <%= select_tag :city, options_for_select(Constants::AIRPORTS.invert.sort), class: "input-lg", prompt: "From" %>
      </div>
      <div class="col-xs-6">
        <%= select_tag  :region, options_for_select(Constants::REGIONS.sort), class: "input-lg", prompt: "To" %>
      </div>
      <div class="form-group">
    <%= text_field_tag :starts_on, nil, placeholder: "Departure", "class" => 'input-lg datepicker text-center'%>
    <%= text_field_tag :returns_on, nil, placeholder: "Return", "class" => ' input-lg datepicker text-center' %>
    <i class="fa fa-male fa-lg" aria-hidden="true"></i>
    <%= select_tag :nb_travelers, options_for_select(Constants::TRAVELERS.invert.sort), class: "input-lg", prompt: "Travelers" %>
    <hr>
    <%= submit_tag "LET'S TRAVEL", class: "btn btn-danger btn-big" %>
    </div>
    <%end%>
  </div>
  </div>
</div>
</div>


