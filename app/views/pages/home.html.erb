        <%= text_field_tag :returns_on, nil, placeholder: "Return", "class" => 'datepicker text-center', style: "border: none" %>
        <%= select_tag :nb_travelers, options_for_select(Constants::TRAVELERS.invert.sort), class: "form-control input-lg", prompt: "Travelers", style: "border:none" %>
        <%= submit_tag "LET'S TRAVEL", class: "btn btn-danger" %>
      <%end%>
    </div>
  </div>
</div>

