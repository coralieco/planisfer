
  <div class = "row">

    <div class = "col-xs-12 col-md-6">
      <div class = "poi-name" >
        <%= @poi.name%>
      </div>
    </div>

    <div class = "col-xs-12 col-md-6">
      <div class = "poi-title">
        <%= @poi.title %>
      </div>
    </div>

  </div>

  <div class = "row">

    <div class = "col-xs-12 col-md-6">
      <%= image_tag @region.name.downcase + "/" + @poi.name.downcase + ".jpg", class: "poi-image"%>
    </div>

    <div class = "col-xs-12 col-md-6">
      <%= @poi.description %>
    </div>

  </div>
