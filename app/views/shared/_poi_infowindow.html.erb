
  <div class = "row">

    <div class = "col-xs-12 col-md-6">
      <div class = "poi-name" >
        <%= @poi.name%>
      </div>
    </div>

    <div class = "col-xs-12 col-md-6">
      <div class = "poi-title">
        <%= image_tag "heart-small.png", class:"small-heart heart-padded" %> <span>What Planisfer members think...</span>
      </div>
    </div>

  </div>

  <div class = "row">

    <div class = "col-xs-12 col-md-6">
      <%= image_tag @region.name.downcase.gsub(/\ /, '-') + "/" + @poi.name.downcase.gsub(/\ /, '-') + ".jpg", class: "poi-image"%>
      <div class = "poi-title">
        <%= @poi.title%>
      </div>
    </div>

    <div class = "col-xs-12 col-md-6">
      <ul class = "description-list">
        <% if !@poi.description1.nil? %>
          <li>" <%= @poi.description1%> "</li>
        <% end %>
        <% if !@poi.description2.nil? %>
          <li>" <%= @poi.description2%> "</li>
        <% end %>
        <% if !@poi.description3.nil? %>
          <li>" <%= @poi.description3%> "</li>
        <% end %>
        <% if !@poi.description4.nil? %>
          <li>" <%= @poi.description4%> "</li>
        <% end %>
        <% if !@poi.description5.nil? %>
          <li>" <%= @poi.description5%> "</li>
        <% end %>

      </ul>
    </div>

  </div>
